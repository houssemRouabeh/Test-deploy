<%- include('../partial/header') %>

<main>
  <div class="content-form">
    <div class="login-container">
      <h2>Connexion</h2>

      <% if (messages && messages.error) { %>
      <div class="error-container">
        <% if (Array.isArray(messages.error)) { %>
        <ul class="error-list">
          <% messages.error.forEach(error => { %>
          <li><%= error %></li>
          <% }); %>
        </ul>
        <% } else { %>
        <p><%= messages.error %></p>
        <% } %>
      </div>
      <% } %> <% if (messages && messages.success) { %>
      <div class="success-message"><%= messages.success %></div>
      <% } %>

      <form action="/login" method="POST">
        <div
          class="form-group <%= locals.fieldErrors && locals.fieldErrors.email ? 'invalid' : '' %>"
        >
          <label for="email">Adresse e-mail</label>
          <input
            type="text"
            id="email"
            name="email"
            value="<%= formData.email || '' %>"
          />
          <% if (locals.fieldErrors && locals.fieldErrors.email) { %>
          <div class="error-message"><%= fieldErrors.email %></div>
          <% } %>
        </div>

        <div
          class="form-group <%= locals.fieldErrors && locals.fieldErrors.password ? 'invalid' : '' %>"
        >
          <label for="password">Mot de passe</label>
          <input type="password" id="password" name="password" />
          <% if (locals.fieldErrors && locals.fieldErrors.password) { %>
          <div class="error-message"><%= fieldErrors.password %></div>
          <% } %>
        </div>

        <div class="forgot-password">
          <a href="/forgot-password">Mot de passe oublié ?</a>
        </div>

        <button type="submit">Se connecter</button>
      </form>
      <p class="register-link">
        Pas encore inscrit ? <a href="/register">Créer un compte</a>
      </p>
    </div>
  </div>
</main>

<%- include('../partial/footer') %>
